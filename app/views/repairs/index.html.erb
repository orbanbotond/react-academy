<p id="notice"><%= notice %></p>

<h1>Repairs</h1>

<table>
  <thead>
    <tr>
      <th>Complete</th>
      <th>Name</th>
      <th>User</th>
      <th>Approved</th>
      <th>Starts at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.complete %></td>
        <td><%= repair.name %></td>
        <td><%= repair.user %></td>
        <td><%= repair.approved %></td>
        <td><%= repair.starts_at %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

